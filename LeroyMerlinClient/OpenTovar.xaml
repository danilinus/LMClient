<Window x:Class="LeroyMerlinClient.OpenTovar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeroyMerlinClient"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Открыть файл прихода" Height="185" Width="390" ResizeMode="NoResize" Icon="Images/Truck_48px.png" >
    <Grid>
        <TextBlock x:Name="First" TextWrapping="Wrap" Margin="10" FontSize="20" Text="Откройте файл excel прихода товара, для его сверки с теущей базой"/>
        <TextBlock x:Name="Second" TextWrapping="Wrap" Margin="10" FontSize="25" Text="Ожидайте, идёт сбор данных из Excel файла" Visibility="Collapsed"/>
        <TextBlock x:Name="Threed" TextWrapping="Wrap" Margin="10" FontSize="20" Text="Ожидайте, идёт сверка собранных данных с текущей базой" Visibility="Collapsed"/>
        <Button x:Name="OpenFileExcel" Content="Открыть файл" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Margin="122,106,0,0" Click="OpenFileExcel_Click" Height="28"/>
    </Grid>
</Window>
